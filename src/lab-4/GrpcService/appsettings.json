{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "Kafka": {
    "Producer": {
      "TopicName": "order_creation",
      "BootstrapServers": "localhost:8001"
    },
    "Consumer": {
      "Handler": {
        "BatchSize": 5,
        "Timeout": 5
      },
      "Reader": {
        "BootstrapServers": "localhost:8001",
        "GroupId": "1",
        "TopicName": "order_processing"
      }
    },
    "BackgroundService": {
      "ChannelCapacity": 100
    }
  },
  "Persistence": {
    "Postgres": {
      "Host": "localhost",
      "Port": "5433",
      "Password": "postgres",
      "Username": "postgres"
    }
  }
}
